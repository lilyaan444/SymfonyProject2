{% extends 'base.html.twig' %}

{% block title %}Dashboard - Backoffice{% endblock %}

{% block body %}
    <div class="bg-white rounded-lg shadow p-6">
        <h1 class="text-2xl font-bold mb-4">Bienvenue, {{ user.email }}</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-blue-100 p-4 rounded-lg">
                <h3 class="font-bold text-blue-800">Utilisateurs</h3>
                <p class="text-blue-600">Gérer les utilisateurs du système</p>
            </div>
            <div class="bg-green-100 p-4 rounded-lg">
                <h3 class="font-bold text-green-800">Produits</h3>
                <p class="text-green-600">Gérer le catalogue de produits</p>
            </div>
            <div class="bg-purple-100 p-4 rounded-lg">
                <h3 class="font-bold text-purple-800">Clients</h3>
                <p class="text-purple-600">Gérer la base de clients</p>
            </div>
        </div>
    </div>
{% endblock %}